<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="trellocli_orders_order_rating" resource="default" engine="innodb"  comment="Catalog Product Datetime Attribute Backend Table">
        <column xsi:type="int" name="rating_id" padding="11" unsigned="true" nullable="false" identity="true" />
        <column xsi:type="varchar" name="customer_name" nullable="false"  />
        <column xsi:type="int" name="rating_mark" nullable="false"  />
        <column xsi:type="varchar" name="comment" nullable="false" />
        <column xsi:type="timestamp" name="created_at" nullable="false"  />
        <column xsi:type="timestamp" name="updated_at" nullable="false"  />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="rating_id"/>
        </constraint>
    </table>

</schema>