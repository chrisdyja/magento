<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="mageplaza_helloworld_post" resource="default" engine="innodb"  comment="Catalog Product Datetime Attribute Backend Table">
        <column xsi:type="int" name="post_id" padding="11" unsigned="true" nullable="false" identity="true" />
        <column xsi:type="varchar" name="name" nullable="false"  />
        <column xsi:type="varchar" name="url_key" nullable="false" />
        <column xsi:type="varchar" name="post_content" nullable="false"  />
        <column xsi:type="varchar" name="tags" nullable="false" />
        <column xsi:type="int" name="status" nullable="false" />
        <column xsi:type="varchar" name="featured_image" nullable="false"  />
        <column xsi:type="timestamp" name="created_at" nullable="false"  />
        <column xsi:type="timestamp" name="updated_at" nullable="false"  />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
    </table>


</schema>